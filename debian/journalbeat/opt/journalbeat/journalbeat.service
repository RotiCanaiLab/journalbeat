[Unit]
Description=journalbeat
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
EnvironmentFile=/etc/journalbeat
WorkingDirectory=/opt/journalbeat
ExecStart=/opt/journalbeat/bin/journalbeat -e -c ${HOME}/${JOURNAL_BEAT_CONFIG_FILE}
Restart=on-failure
LimitNOFILE=10000

[Install]
WantedBy=multi-user.target
